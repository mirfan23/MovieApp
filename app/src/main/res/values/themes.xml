    <style name="Theme.MovieAppFinal" parent="Base.Theme.MovieAppFinal" />

    <style name="another">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#6750A4</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="name">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#49454F</item>
    </style>

    <style name="headline" parent="Theme.Material3.Light">
        <item name="android:fontFamily">@font/poppins_medium_italic</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#1D1B20</item>
        <item name="android:includeFontPadding">false</item>
    </style>

        <style name="ShapeAppearanceOverlay.App.ConerSize50percent" parent="">
            <item name="cornerSize">50%</item>
        </style>

        <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
            <item name="iconPadding">0dp</item>
            <item name="android:insetTop">0dp</item>
