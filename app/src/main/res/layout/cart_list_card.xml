<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/img_thumbnail_cart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="0"
                tools:src="@drawable/on_boarding_1" />

            <LinearLayout
                android:id="@+id/layout_item_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="28sp"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="item name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_token_ic"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_token" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:layout_marginEnd="100dp"
                        tools:text="500" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_cart"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:icon="@drawable/ic_delete"
                        app:iconGravity="textStart"
                        app:iconSize="30dp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>