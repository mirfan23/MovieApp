<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.others.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_detail"
                style="@style/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_back"
                app:title="John"
                app:titleCentered="true"
                tools:title="Detail">

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/price_input"
            android:layout_below="@id/appbar_detail">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_movie_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/carousel_home" />

                <ImageView
                    android:id="@id/iv_movie_poster"
                    android:layout_width="125dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/iv_movie_bg"
                    app:layout_constraintTop_toBottomOf="@id/iv_movie_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="180dp"
                    android:layout_toStartOf="@id/tv_movie_title_detail"
                    android:src="@drawable/movie_item_detail" />

                <TextView
                    android:id="@+id/tv_movie_title_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/iv_movie_poster"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:maxLines="2"
                    android:gravity="center_horizontal"
                    android:ellipsize="end"
                    android:textSize="26sp"
                    tools:text="Spider-Man No Way Home" />

                <ImageView
                    android:id="@+id/iv_wishlist"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@id/ll_movie_token_cost"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_movie_bg"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_wishlist"/>

                <LinearLayout
                    android:id="@+id/ll_movie_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_title_detail"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        tools:text="2021" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"

                        android:src="@drawable/ic_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        tools:text="148 Minutes" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        tools:text="2021" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_movie_token_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/iv_movie_bg"
                    app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_token" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="30sp"
                        tools:text="500" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_movie_time"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Movie Overview" />

                <TextView
                    android:id="@+id/tv_detail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_product"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="this is description" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buy"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                app:cornerRadius="10dp"
                tools:text="Buy Now" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:cornerRadius="10dp"
                tools:text="Add to Cart" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>